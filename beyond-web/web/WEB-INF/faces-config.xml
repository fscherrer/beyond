<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
  
  <navigation-rule>
    <from-view-id>*</from-view-id>
    
    <navigation-case>
      <display-name>Admin</display-name>
      <from-outcome>admin</from-outcome>
      <to-view-id>/admin/admin.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    
    <navigation-case>
      <display-name>Logout</display-name>
      <from-outcome>logout</from-outcome>
      <to-view-id>/admin/login.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    
    <navigation-case>
      <display-name>Login</display-name>
      <from-outcome>login</from-outcome>
      <to-view-id>/admin/login.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    
    <navigation-case>
      <display-name>Usu√°rios</display-name>
      <from-outcome>usuarios</from-outcome>
      <to-view-id>/admin/usuarios.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    
   <navigation-case>
      <display-name>Bandas</display-name>
      <from-outcome>bandas</from-outcome>
      <to-view-id>/admin/bandas.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    
    <navigation-case>
      <display-name>UFs</display-name>
      <from-outcome>ufs</from-outcome>
      <to-view-id>/admin/ufs.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    
    <navigation-case>
      <display-name>musicos</display-name>
      <from-outcome>musicos</from-outcome>
      <to-view-id>/admin/musicos.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    
    <navigation-case>
      <display-name>Index</display-name>
      <from-outcome>index</from-outcome>
      <to-view-id>/index.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>
  
  <application>
    <resource-bundle>
      <base-name>br.com.einsteinlimeira.beyond.web.mensagens</base-name>
      <var>msgs</var>
    </resource-bundle>
    
    <locale-config>
      <default-locale>pt_BR</default-locale>
      <supported-locale>pt_BR</supported-locale>
    </locale-config>
  </application>
  
  <lifecycle>
    <phase-listener>br.com.einsteinlimeira.beyond.web.LoginPhaseListener</phase-listener>
  </lifecycle>
  
</faces-config>
